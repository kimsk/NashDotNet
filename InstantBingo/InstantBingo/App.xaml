<micro:CaliburnApplication
    x:Class="InstantBingo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InstantBingo"    
    xmlns:micro="using:Caliburn.Micro"
    xmlns:converters="using:InstantBingo.Converters">
    <micro:CaliburnApplication.Resources>
        <ResourceDictionary>
            <micro:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:NumberStatusToBackgroundColorConverter x:Key="NumberStatusToBackgroundColorConverter" />
            <converters:NumberStatusToVisibilityConverter x:Key="NumberStatusToVisibilityConverter" />
            <converters:CalledBallCallStatusToVisibility x:Key="CalledBallCallStatusToVisibility" />
            <converters:InPatternBallCallStatusToVisibility x:Key="InPatternBallCallStatusToVisibility" />
            <SolidColorBrush x:Key="ContentBackgroundColorBrush" Color="#9F000000" />
        </ResourceDictionary>
    </micro:CaliburnApplication.Resources>
</micro:CaliburnApplication>
